@model List<IdentityRole>

@{
    ViewData["Title"] = "Manage Roles";
}

<div class="col-12 d-flex justify-content-center align-items-center">
    <header>
        <h2 class="display-6">Manage Roles</h2>
    </header>
</div>
<br />
<table class="table table-striped table-responsive">
    <thead class="">
        <tr>
            <th>
                Role
            </th>
            <th>
                Manage
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a class="link-offset-2 link-underline link-underline-opacity-0" data-toggle="tooltip" title="Rename Role" asp-action="UpdateRole"
                           asp-route-role="@item.Name"><i class="fi fi-rr-pencil" style="font-size:20px"></i></a>
                        <a class="link-offset-2 link-underline link-underline-opacity-0 ms-3" data-toggle="tooltip" title="Delete Role"
                           asp-action="DeleteRole" asp-route-role=@item.Name><i class="fi fi-rr-trash" style="font-size:20px"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>No roles created yet</p>
        }
    </tbody>
</table>

<br/>

<div style="display: flex; justify-content: start; width: 100%;">
    <a class="btn btn-dark d-flex align-items-center rounded-pill" style="width: 150px;" asp-action="CreateRole">
        <i class="fi fi-rr-plus ms-1" style="margin-right: 7px; margin-top: 3px;"></i>
        <span style="margin-left:5px">Create Role</span>
    </a>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        })
    </script>
     
}



