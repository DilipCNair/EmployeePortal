@model List<IdentityRole>

@{
    ViewData["Title"] = "Manage Roles";
}

<div class="col-12 d-flex justify-content-center align-items-center">
    <header>
        <h2 class="display-6">Manage Roles</h2>
    </header>
</div>
<br />
<table class="table table-striped table-responsive">
    <thead class="">
        <tr>
            <th>
                Role
            </th>
            <th>
                Manage
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-action="UpdateRole" asp-route-role="@item.Name">Edit</a>
                        <a class="btn btn-secondary" asp-action="DeleteRole" asp-route-role=@item.Name>Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>No roles created yet</p>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="CreateRole">Create</a>
