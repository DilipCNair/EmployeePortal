@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}
@* <div class="text-lg-start" style="margin-top:120px">
    <h2 class="display-6">Forgot Password</h2>
</div> *@

<div class="d-flex justify-content-center w-100" style="margin-top:30px">
    <div class="col-md-4">
        <div class="text-lg-start" style="margin-top:120px">
            <h2 style="font-weight:600">Forgot Password?</h2>
        </div>
        <div class="text-lg-start mt-3 mb-4">
            <p style="color:dimgray">No worries, we will send you the reset instructions</p>
        </div>
        <form asp-controller="Home" asp-action="ForgotPassword" method="post">           
            <div style="margin-bottom:30px">
                @* <label asp-for="Email" class="form-label">Email address</label> *@
                <input asp-for="Email" style="height:50px;margin-bottom:10px" class="form-control" 
                        placeholder="Enter your email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" style="height:40px" 
                        class="btn btn-dark rounded-pill w-100">
                    Reset password
                </button>
            </div>
            <div class="text-center mt-3">
                <a class="link-offset-2 link-underline link-underline-opacity-0" 
                    asp-controller="Home" asp-action="Signin">
                    <i class="fi fi-sr-arrow-left" 
                    style="vertical-align:middle;margin-right:3px"></i> Back to Signin
                </a>
            </div>
        </form>
        <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
    </div>
</div>

