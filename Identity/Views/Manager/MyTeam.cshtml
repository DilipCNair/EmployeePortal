@model TeamsViewModel

@{
    ViewData["Title"] = "My Team";
}

<div class="col-12 d-flex justify-content-center align-items-center">
    <header>
        <h2 class="display-6">My Team</h2>
    </header>
</div>
<br/>



@if(Model is null)
{
    <p style="color:gray">No teams created yet</p>
}

else if (Model.Members != null && Model.Members.Any())
{
    <div class="justify-content-center mb-4">
        <h5>My Team Members</h5>
    </div>
    <table class="table table-striped table-responsive w-100">
        <thead class="table-primary">
            <tr>
                <th>Email</th>
                <th>Department</th>
                <th>Full Name</th>                
                <th>Gender</th>
                <th>Total Tasks</th>
                <th>Tasks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model.Members)
            {
                <tr>
                    <td>@member.Email</td>
                    <td>@member.EmployeeDepartment</td>
                    <td>@member.FirstName @member.MiddleName @member.LastName</td>                          
                    <td>@member.EmployeeGender</td>
                    <td>@member.Tasks.Count</td>
                    <td>
                        <a class="link-offset-2 link-underline link-underline-opacity-0"
                           asp-action="Tasks" asp-route-email="@member.Email">Manage</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="justify-content-center mb-4 mt-5">
        <h5 class="mb-3">My Team Details</h5>
        <p>Team ID : @Model.Id</p>
        <p>Name : @Model.Name</p>
        <p>Description : @Model.Description</p>
    </div>
}
else
{
    <p style="color:gray">No members in the team</p>
}



