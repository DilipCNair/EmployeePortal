@model TaskViewModel

@{
    ViewData["Title"] = "Create Task";
}

<div class="col-12 d-flex justify-content-center align-items-center">
    <header>
        <h2 class="display-6">Create Task</h2>
    </header>
</div>
<br />

<div>
    <form asp-action="CreateTask" class="mt-3" method="post">
        <div class="row mb-4 d-flex justify-content-center">
            <label for="Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-4">
                <input type="text" placeholder="Enter a name for your task" class="form-control" id="Name" name="Name" asp-for="@Model.Name">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4 d-flex justify-content-center">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-4">
                <input type="email" placeholder="Enter the name of the member"
                    class="form-control" asp-for="@Model.Member">
                <span asp-validation-for="@Model.Member" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4 d-flex justify-content-center">
            <label for="Description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-4">
                <textarea placeholder="Give a description" class="form-control" id="Description"
                          name="Description" rows="6" style="resize: none;"
                          asp-for="@Model.Description" rows="4"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
        </div>


        <div class="row mb-4 d-flex justify-content-center">
            <label for="TargetDate" class="col-sm-2 col-form-label">Target Date</label>
            <div class="col-sm-4">
                <input type="date" class="form-control" asp-for="@Model.TargetDate">
                <span asp-validation-for="@Model.TargetDate" class="text-danger"></span>
            </div>
        </div>



        <div class="row mb-5 d-flex justify-content-center mt-5">
            <button type="submit" class="btn btn-dark rounded-pill ms-3" style="width:150px">
                Create
            </button>
        </div>
        <div class="text-center mt-4">
            <a class="link-offset-2 link-underline link-underline-opacity-0"
               asp-controller="Manager" asp-action="MyTeam">
                <i class="fi fi-sr-arrow-left"
                   style="vertical-align:middle;margin-right:3px"></i> Back to My Team
            </a>
        </div>
    </form>
</div>