@model List<BasicDetailsViewModelForManager>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="col-12 d-flex justify-content-center align-items-center">
    <header>
        <h2 class="display-6">Manage Users</h2>
    </header>
</div>
<br />

<table class="table table-striped table-responsive">
    <thead class="">
        <tr>
            <th>Email</th>
            <th>Department</th>
            <th>Full Name</th>
            <th>Gender</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        @foreach(var employee in Model)
         {
            <tr>
                <td>     
                    @employee.Email
                </td>
                <td>
                    @if (employee.EmployeeDepartment is Department.Select)
                    {
                        <p>NA</p>
                    }
                    else
                    {
                        @employee.EmployeeDepartment
                    }
                </td>
                <td>
                    @employee.FirstName @employee.MiddleName @employee.LastName
                </td>
                <td>
                    @employee.EmployeeGender
                </td>
                <td>
                    @if (employee.Roles != null && employee.Roles.Any())
                    {
                        <ul>
                            @foreach (var role in employee.Roles)
                            {
                                <li>@role</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No roles assigned</p>
                    }
                </td>
                <td>
                    <a class="link-offset-2 link-underline link-underline-opacity-0"
                        asp-action="GetEmployee" asp-route-email="@employee.Email" >Manage</a>
                </td>
            </tr>
        }
    </tbody>
</table>
